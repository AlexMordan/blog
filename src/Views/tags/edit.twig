<div class="modal-header">
    <h5 class="modal-title">Edit tag: {{ tag.getTitle }}</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body">
    <form method="post" id="editForm">
        <input type="hidden" name="id" id="hiddenId" value="{{ tag.getId }}">
        <div class="form-group row">
            <label for="inputTile" class="col-sm-2 col-form-label">Title: </label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="inputTile" name="inputTile" placeholder="Title" value="{{ tag.getTitle }}">
                <div class="invalid-feedback" id="titleError"></div>
            </div>
        </div>
        <div class="form-group row">
            <label for="inputSlug" class="col-sm-2 col-form-label">Slug: </label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="inputSlug" name="inputSlug" placeholder="Slug" value="{{ tag.getSlug }}">
                <div class="invalid-feedback" id="slugError"></div>
            </div>
        </div>
    </form>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
    <button type="button" id="save-btn" class="btn btn-primary"
            onclick="editTag()">
        Save changes</button>
</div>
