{% extends 'template.twig' %}
{% block head %}
    <link rel="stylesheet" href="/assets/admin.css">
{% endblock %}

{% block content %}

    <div class="d-flex justify-content-between">
        <h1>List categories</h1>
        <div>
            <span>Total: {{ total }}</span>
            <a href="/admin/categories/add" class="btn btn-info">Add Category</a>
        </div>
    </div>
    <table class="table">
        <thead>
        <tr>
            <th>Name</th>
            <th>Image</th>
            <th>Description</th>
            <th>Action</th>
        </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.getName }}</td>
                <td><img class="category-small img-thumbnail" src="{{ category.getImage }}" alt=""></td>
                <td>{{ category.getDescription }}</td>
                <td class="d-flex">
                    <a href="" class="btn btn-info btn-sm"><i class="fas fa-pen"></i> Edit</a>
                    <form action="/admin/categories/delete" method="POST">
                        <input type="hidden" name="_METHOD" value="DELETE"/>
                        <input type="hidden" name="id" value="{{ category.getId }}">
                        <button class="btn btn-danger btn-sm" type="submit"><i class="far fa-trash-alt"></i> Remove</button>
                    </form>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <hr/>
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            {% if page!=1 %}
                    <li class="page-item">
                        <a class="page-link" href="{{ page - 1 }}" aria-label="Previous">
                            <span aria-hidden="true">
                                <i class="fas fa-chevron-left"></i>
                            </span>
                        </a>
                    </li>
                {% else %}
                    <li class="page-item disabled">
                        <a class="page-link" href="" aria-label="Previous">
                            <span aria-hidden="true">
                                <i class="fas fa-chevron-left"></i>
                            </span>
                        </a>
                    </li>
            {% endif %}

            {% for i in 1..pages %}
                {% if i==page %}
                    <li class="page-item active" aria-current="page">
                        <span class="page-link">
                            {{ i }} <span class="sr-only">(current)</span>
                        </span>
                    </li>
                {% else %}
                    <li class="page-item">
                        <a class="page-link" href="/admin/categories/{{ i }}">{{ i }}</a>
                    </li>
                {% endif %}
            {% endfor %}

            {% if page==pages %}
                    <li class="page-item disabled">
                        <a class="page-link" href="" aria-label="Next">
                            <span aria-hidden="true">
                                <i class="fas fa-chevron-right"></i>
                            </span>
                        </a>
                    </li>
                {% else %}
                    <li class="page-item">
                        <a class="page-link" href="/admin/categories/{{ page + 1 }}" aria-label="Next">
                            <span aria-hidden="true">
                                <i class="fas fa-chevron-right"></i>
                            </span>
                        </a>
                    </li>
            {% endif %}

        </ul>
    </nav>
{% endblock %}